<div id="post_raty"></div>
<script>
$(document).on('turbolinks:load', function () {
  // scriptファイルをどのidの部分に配置するかを指定
  let elem = document.querySelector('#post_raty');
  let opt = {
    //星画像の指定などのオプションをここに記述
    starOff:  '<%= asset_path('star-off.png') %>',     // Path of the star image off
    starOn :  '<%= asset_path('star-on.png') %>'       // Path of the star image on
    // starHalf: '<%= asset_path('star-half.png') %>'  // Path of the star image half
    // half: true                                      // Enables half star selection
    // readOnly: true,                                 // Turns the rating read-only
    // score: undefined                                // Initial rating
    // iconRange: [                                    // Object list with position and icon on and off to do a mixed icons
    //   { range: 1, on: "<%= asset_path('star-on.png') %>", off: "<%= asset_path('star-off.png') %>" },
    //   { range: 2, on: "<%= asset_path('star-on.png') %>", off: "<%= asset_path('star-off.png') %>" },
    //   { range: 3, on: "<%= asset_path('star-on.png') %>", off: "<%= asset_path('star-off.png') %>" },
    //   { range: 4, on: "<%= asset_path('star-on.png') %>", off: "<%= asset_path('star-off.png') %>" },
    //   { range: 5, on: "<%= asset_path('star-on.png') %>", off: "<%= asset_path('star-off.png') %>" }
    // ],
  };
  raty(elem,opt);
});
</script>
<div class='container px-5 px-sm-0'>
  <%= render 'layouts/errors', obj: @book %>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'index', books: @books%>
      
    </div>
  </div>
</div>
